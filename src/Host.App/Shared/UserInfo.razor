@inject ISharedUserContext UserContext

<div class="user-info">
    <div class="d-flex justify-content-between align-items-center">
        <div>
            <strong>@UserContext.User.DisplayName</strong>
            <small class="text-muted">(@UserContext.User.Username)</small>
        </div>
        <div>
            <span class="badge badge-primary">@string.Join(", ", UserContext.User.Roles)</span>
        </div>
    </div>
    <div class="mt-2">
        <small class="text-muted">
            Last login: @UserContext.User.LastLoginDate.ToString("yyyy-MM-dd HH:mm")
        </small>
    </div>
</div>
